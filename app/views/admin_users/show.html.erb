<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Is Admin:</strong>
    <%= @user.is_admin ? 'Yes' : 'No' %>
  </p>

  <h2>Comments</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Project</th>
        <th>From User</th>
        <th>Score</th>
        <th>Comment</th>
      </tr>
    </thead>

    <tbody>
      <% Comment.where(to_user: @user.id).each do |comment| %>
        <tr>
          <td><%= comment.project&.name %></td>
          <td><%= User.find_by(id: comment.from_user)&.name %></td>
          <td><%= comment.score %></td>
          <td><%= comment.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Edit', edit_admin_user_path(@user) %> |
  <%= link_to 'Back', admin_users_path %>
</div>